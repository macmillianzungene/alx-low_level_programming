# Variables
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)

$(OBJ): $(SRC)
	@$(CC) -c $^ $(CFLAGS)

clean:
	@find . -name "*~" -type f -delete
	@find . -name "\#*\#" -type f -delete
	@/bin/rm -f $(NAME)

oclean:
	@/bin/rm -f $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
